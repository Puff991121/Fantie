/* pages/budget/budget.wxss */
.accounting-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.month {
  font-size: 36rpx;
  font-weight: bold;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.add-btn {
  font-size: 28rpx;
  color: white;
  background-color: #28C76F;
  padding: 10rpx 30rpx;
  border-radius: 10px;
  line-height: 1;
  margin-bottom: 10rpx;
}

.add-btn::after {
  border: none;
}

.total-amount {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-align: right;
}

.income {
  color: #07C160;
}

.expense {
  color: #FF4D4F;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.item-name {
  font-size: 30rpx;
  flex: 2;
}

.item-date {
  font-size: 26rpx;
  color: #999;
  flex: 1;
  text-align: center;
}

.item-amount {
  font-size: 30rpx;
  flex: 1;
  text-align: right;
}
.right-add{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.red-btn{
  background-color: #FF4D4F;
}