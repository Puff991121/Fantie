/* pages/profile/profile.wxss */
.profile-container {
  background-color: #ffffff;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 用户信息区 */
.user-info {
  margin: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: linear-gradient(#DCFBE7,#EDFDF2);
}

.left-section {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.join-days {
  font-size: 24rpx;
  color: #999;
}

.edit-btn {
  font-size: 26rpx;
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  background-color: #22C55E;
}

/* 数据统计卡片 */
.stats-card {
  display: grid;
  grid-template-columns: repeat(3,1fr);
  gap: 20rpx;
  padding: 30rpx 0;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  border: 1px solid #F3F4F6;
  border-radius: 20rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #22C55E;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.stat-desc {
  font-size: 24rpx;
  color: #999;
}

/* 功能菜单 */
.menu-list {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 14rpx;
  height: 24rpx;
  margin-left: auto;
}