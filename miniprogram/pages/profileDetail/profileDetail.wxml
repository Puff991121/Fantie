<view class="profile-detail-container">
  <!-- 顶部导航 -->
  <view class="header">
    <view class="save-btn" bindtap="saveUserInfo">保存</view>
  </view>

  <!-- 头像区域 -->
  <view class="avatar-section">
    <view class="avatar-wrapper">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}"></image>
      <view class="camera-icon" bindtap="chooseAvatar">
        <image src="/images/camera-icon.png"></image>
      </view>
    </view>
  </view>

  <!-- 个人信息表单 -->
  <view class="form-section">
    <view class="form-item">
      <text class="label">昵称</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入昵称" 
        value="{{userInfo.nickName}}" 
        bindinput="onNickNameChange"
      />
    </view>
    
    <view class="form-item">
      <text class="label">性别</text>
      <picker 
        class="picker" 
        mode="selector" 
        range="{{genderOptions}}" 
        range-key="text"
        value="{{genderIndex}}" 
        bindchange="onGenderChange"
      >
        <view class="picker-value">{{userInfo.gender || '请选择性别'}}</view>
      </picker>
    </view>
    
    <view class="form-item">
      <text class="label">手机号</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入手机号" 
        value="{{userInfo.phone}}" 
        bindinput="onPhoneChange"
      />
    </view>
    
    <view class="form-item">
      <text class="label">邮箱</text>
      <input 
        class="input" 
        type="email" 
        placeholder="请输入邮箱" 
        value="{{userInfo.email}}" 
        bindinput="onEmailChange"
      />
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-btn" bindtap="logout">退出登录</view>
</view>