/* pages/weight/weight.wxss */
page{
  background-color: #fff;
}
.weight-container {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 36rpx;
  font-weight: bold;
}

.arrow {
  padding: 0 30rpx;
}
.arrow image{
  width: 60rpx;
  height: 60rpx;
}
.current-date {
  flex: 1;
  text-align: center;
}

.today-weight {
  background-color: #f0f8ff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.weight-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  align-items: center;
  text-align: center;
}

.weight-row text {
  flex: 1;
  text-align: center;
}

.increase {
  color: #FF4500;
  height: 19px;
  flex: 1;
}

.decrease {
  color: #32CD32;
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.history-table {
  box-shadow: 2px 2px 28px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.table-header, .table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.table-header text, .table-row text {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.table-row view{
  text-align: center;
  flex: 1;
  line-height: 38px;
  height: 38px;
}
.table-header {
  font-weight: bold;
}

.month-stats {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  padding: 35rpx 0;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #22C55E;
  margin-top: 10rpx;
}

.add-button {
  background-color: #22C55E;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  padding: 20rpx 0;
}

.modal-content {
  padding: 40rpx;
}

.picker {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
}